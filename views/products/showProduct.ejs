<% layout('layout/boilerplate') -%>
<div class="container mt-5">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title"><%= product.productName %></h2>
            <p class="card-text"><%= product.productDescription %></p>
            <p class="card-text"><strong>Price: $<%= product.productPrice %></strong></p>
            <% if(currUser?.userType=='seller') { %>
            <form action="/p/products/delete/<%= product._id %>?_method=DELETE" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <form action="/p/products/edit/<%= product._id %>?_method=GET" method="POST" class="d-inline">
                <button type="submit" class="btn btn-warning">Edit</button>
            </form>
            <% } %>
            <form action="/p/cart/add/<%= product._id %>" method="POST" class="d-inline">
                <button type="submit" class="btn btn-warning">Add To Cart</button>
            </form>
            <a href="/p/products" class="btn btn-primary">Back</a>
        </div>
    </div>
    <div class="mt-5">
        <h3>Write a Review</h3>
        <form action="/p/reviews/add" method="POST">
            <div class="form-group">
                <label for="comment">Comment:</label>
                <textarea class="form-control" id="comment" name="comment" rows="3" required></textarea>
            </div>
            <div class="form-group">
                <label for="rating">Rating:</label>
                <input type="range" class="form-control-range w-100" id="rating" name="rating" min="1" max="5" step="1" value="1" required>
                <div class="d-flex justify-content-between">
                    <span>1</span>
                    <span>2</span>
                    <span>3</span>
                    <span>4</span>
                    <span>5</span>
                </div>
            </div>
            <input type="hidden" name="product" value="<%= product._id %>">
            <button type="submit" class="btn btn-success">Submit Review</button>
        </form>
    </div>
    <div class="mt-5">
        <h3>Reviews</h3>
        <div class="reviews-container" style="max-height: 300px; overflow-y: auto;">
            <% if(reviews.length==0) {%>
                <p>No reviews to display.</p>
            <% } %>
            <% reviews.forEach(function(review) { %>
                <div class="review mb-3 p-3 border rounded">
                    <!-- <h5><%= review.user %></h5> -->
                    <p><%= review.comment %></p>
                    <small class="text-muted">Rating: <%= review.rating %> / 5</small>
                    <form action="/p/reviews/delete/<%= review._id %>?_method=DELETE" method="POST" >
                        <button type="submit" class="btn btn-danger btn-sm mt-2">Delete</button>
                    </form>
                </div>
            <% }); %>
        </div>
    </div>
</div>